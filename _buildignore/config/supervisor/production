[program:project-name-production-reverb]
process_name=%(program_name)s_%(process_num)02d
command=php /var/www/project-name/production/current/artisan reverb:start
autostart=true
autorestart=true
stopasgroup=true
killasgroup=true
user=www-data
numprocs=1
redirect_stderr=true
stdout_logfile=/var/log/project-name/production/reverb.out.log
stderr_logfile=/var/log/project-name/production/reverb.err.log
stopwaitsecs=3600

[program:get-ai-image]
process_name=%(program_name)s_%(process_num)02d
command=php /var/www/project-name/production/current/artisan queue:work --queue=default,get-ai-image --sleep=3 --tries=3 --timeout=300 --max-time=3600
autostart=true
autorestart=true
stopasgroup=true
killasgroup=true
user=www-data
numprocs=3
redirect_stderr=true
stdout_logfile=/var/log/project-name/production/worker-get-ai-image.out.log
stderr_logfile=/var/log/project-name/production/worker-get-ai-image.err.log
stopwaitsecs=3600

